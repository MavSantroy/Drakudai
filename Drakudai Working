<rolltemplate class="sheet-rolltemplate-custom">
  <div class="sheet-container sheet-color-{{color}}">
    <div class="sheet-header">
      {{#title}}<div class="sheet-title">{{title}}</div>{{/title}}
      {{#subtitle}}<div class="sheet-subtitle">{{subtitle}}</div>{{/subtitle}}
      {{#subtitle2}}<div class="sheet-subtitle2">{{subtitle2}}</div>{{/subtitle2}}
    </div>
    <div class="sheet-content">
      {{#allprops() title subtitle subtitle2 desc color}}
      <div class="sheet-key">{{key}}</div>
      <div class="sheet-value">{{value}}</div>
      {{/allprops() title subtitle subtitle2 desc color}}
      {{#desc}}<div class="sheet-desc">{{desc}}</div>{{/desc}}
    </div>
  </div>
</rolltemplate>


<!-- END OF HTML -->






<script type="text/worker">



/* --------------------------- FUNCTIONS -----------------------------------------------
    These functions can be called by the watchers (further down) or each other. 
*/




function updatePointsSpent() {
    /*
        This function will be called upon by many different watchers, such as 
        when you invest in a skill or invest in a primary attribute. 
        As such, rather than duplicate similar code in each case, it is 
        easily referenced as a function instead. 
        
        Input: nothing
        Return: nothing
    */ 
    attributes = ['strengthPoints', 'dexterityPoints', 'constitutionPoints', 'intelligencePoints', 'wisdomPoints', 'charismaPoints',
        'biologyPoints', 'businessPoints', 'chemistryPoints', 'engineeringPoints', 'tronicsPoints', 'lawPoints', 'physicsPoints', 'programmingPoints', 
        'acrobaticsPoints', 'athleticsPoints', 'awarenessPoints', 'barterPoints', 'charmPoints', 'diplomacyPoints', 'fighterPilotPoints', 
        'focusPoints', 'forgeryPoints', 'gatherInfoPoints', 'insightPoints', 'intimidatePoints', 'investigationPoints', 'medicPoints', 'meleePoints', 'performPoints', 
        'pilotPoints', 'sleightOfHandPoints', 'stealthPoints', 'survivalPoints'];
    getAttrs(attributes, function(values) { 
    let total = 0;
    attributes.forEach(attribute =>{  total += parseInt(values[attribute]) || 0;   });
    setAttrs({ totalPoints : total });
    });
}

function updateActionPoints() {
    getAttrs(['dexterity', 'intelligence', 'life_energy'], function(values) {
        let dex = parseInt(values.dexterity) || 0;
        let int = parseInt(values.intelligence) || 0;
        let le = parseInt(values.life_energy) || 0;
        let re = Math.floor((le - 100) / 10)+1
        let points = dex + int + re;
        let progressionList=[];
        for (i = 1; i < 40; i++) {
            progressionList = progressionList.concat(Math.pow(2, i-1));
        }
        let skillLevelBought = buySkillLevel(progressionList, points);
        let result = Math.max(skillLevelBought, 1);
        setAttrs({ actionPoints : result });
    });
}

function updateDefense() {
    getAttrs(['strength', 'dexterity', 'constitution', 'wisdom', 'armorPenetrationPlus', 'shieldsPenetrationPlus', 'racialHPBonus', 'armor_defense', 'shields_defense', 'life_energy', 'psi_deflection', 'psi_domination'], function(values) {
        /*
            DEFENSE
            Ranged Def      10+Dex+Armor Def + Shield Def+Deflection+Misc
            Melee Def       Roll off + Melee Skill + Misc + Deflection
            Mental Def      20+Wis+Deflection+RE+Misc
            CDS             _"10+Tech Level"__
            
            HEALTH
            HP          Race Base Bonus + Strength x Constitution
            P+          P+ = Floor( Con / 10)
            Regen       Floor(CON/5) / day
        */

        let str = parseInt(values.strength) || 0;
        let dex = parseInt(values.dexterity) || 0;
        let con = parseInt(values.constitution) || 0;
        let wis = parseInt(values.wisdom) || 0;
        
        let le = parseInt(values.life_energy) || 0;
        let re = Math.floor(le - 100)/10 || 0;
        
        let techLevel = 0;
        
        let racialHPBonus = parseInt(values.racialHPBonus) || 0;
        
        let basePenetrationPlus = Math.floor(con/10) || 0;
        let armorPenetrationPlus = parseInt(values.armorPenetrationPlus) || 0;
        let shieldsPenetrationPlus = parseInt(values.shieldsPenetrationPlus) || 0;
        let armor_def = parseInt(values.armor_defense) || 0;
        let shields_def = parseInt(values.shields_defense) || 0;
        
        // Set Attributes based on aliases above DEFENSE
        //setAttrs({ ranged_defense : 10 + dex + armor_def + shields_def + psi_deflection });
        setAttrs({ mental_defense : 10 + wis + psi_domination + re/10 });
    
        // HEALTH
        setAttrs({ health_max : racialHPBonus + str*con });
        setAttrs({ penetrationPlus : basePenetrationPlus });
        setAttrs({ regen : Math.floor(con/5) });
        
    });
}

function buySkillLevel(progressionList, points) {
    let cont = true;
    let iterator = 0;
    let skillLevelBought = 0;
    let p = points;
    
    while (cont) {
        if (iterator >= progressionList.length) {
            iterator = 0;
        }
        else if (p >= progressionList[iterator]) {
            p = p - progressionList[iterator];
            skillLevelBought = skillLevelBought +1;
            iterator = iterator +1;
        }
        else {
            cont = false;
        }
    }
    return skillLevelBought;
}

/* --------------------------- WATCHERS -----------------------------------------------
    These guys look for changes in attributes and executes 
    code when they notice a change. 
*/


/*
    You could condense the primary attribute watchers into pone, however, 
    doing so would only save a few lines of code and come at the cost of having
    to include lots of various bloated code. 
    For example, if carry weight depends solely on strength, then it is 
    unnecessary to recalculate it every time I change my intelligence. 
    Thus why we have specific watchers for each primary attribute. 
    This also makes it easier to debug, since each attribute handles itself. 
*/

on('change:strengthRacial change:strengthCybernetic change:strengthGenetic change:strengthVI change:strengthMisc change:strengthPoints', function(eventInfo) {
    getAttrs(['strengthRacial', 'strengthCybernetic', 'strengthGenetic', "strengthVI", "strengthMisc", 'strengthPoints'], function(values) {
        updatePointsSpent();
        let r = parseInt(values.strengthRacial) || 0;
        let c = parseInt(values.strengthCybernetic) || 0;
        let g = parseInt(values.strengthGenetic) || 0;
        let v = parseInt(values.strengthVI) || 0;
        let m = parseInt(values.strengthMisc) || 0;
        let p = parseInt(values.strengthPoints) || 0;
        let progressionList = [];
        for (i = 1; i < 100; i++) {
            progressionList = progressionList.concat(i);
        }
        let skillLevelBought = buySkillLevel(progressionList, p);
        setAttrs({ strength : r+c+g+v+m+skillLevelBought });
    });
});



on('change:dexterityRacial change:dexterityCybernetic change:dexterityGenetic change:dexterityVI change:dexterityMisc change:dexterityPoints', function(eventInfo) {
    getAttrs(['dexterityRacial', 'dexterityCybernetic', 'dexterityGenetic', "dexterityVI", "dexterityMisc", 'dexterityPoints'], function(values) {
        updatePointsSpent();
        let r = parseInt(values.dexterityRacial) || 0;
        let c = parseInt(values.dexterityCybernetic) || 0;
        let g = parseInt(values.dexterityGenetic) || 0;
        let v = parseInt(values.dexterityVI) || 0;
        let m = parseInt(values.dexterityMisc) || 0;
